{
    "name": "afb-i2c",
    "no-ldpaths": true,
    "alias": [
        "/devtools:/usr/share/afb-ui-devtools/binder"
    ],
    "monitoring": true,
    "tracereq": "all",
    "binding": [
        {
            "uid": "i2c-bus",
            "api": "i2c",
            "path": "/usr/redpesk/i2c-binding-rs/lib/libafb_i2c.so",
            //"path": "/home/fulup/.cargo/build/debug/libafb_i2c.so",
            "info": "i2c set/get api",
            "i2cbus": "/dev/i2c-0",
            //"i2cbus": "/dev/ttyUSB0",
            "permission": "acl:ic2:0",
            "init": [
                {
                    "addr": "0x20",
                    "reg": "0x02",
                    "value": "0xDC"
                },
                {
                    "addr": "0x20",
                    "reg": "0x06",
                    "value": "0x03"
                }
            ],
            "cmds": [
                {
                    "uid": "lock-motor",
                    "name": "Lock-Motor",
                    "info": "Lock motor I2C register",
                    "permission": "acl:lock:motor",
                    "size": 1,
                    "addr": "0x20",
                    "register": "0x02",
                    "presets": [
                        {
                            "action": "on",
                            "delay": 350,
                            "values": [
                                "0xDC",
                                "0xFC",
                                "0xDC"
                            ]
                        },
                        {
                            "action": "off",
                            "delay": 500,
                            "values": [
                                "0xCC",
                                "0xEC",
                                "0xCC"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}